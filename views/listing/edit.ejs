<% layout('/layouts/boilerplate') -%>
<div class="row">
  <div class="col-8 offset-2 mt-5">
   
    <h3>Update a New Listing!</h3>
    <form class="needs-validation" action="/listings/<%= Listing._id %>" method="post" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input required type="text" class="form-control" name="title" value="<%= Listing.title %>">
        <div class="valid-feedback">Title looks good</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea required type="text" class="form-control" name="description" id="" cols="30" rows="5">
          <%= Listing.description %>
        </textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>
      <div class="mb-3">
        <label for="image"  class="form-label">Image URL/Link</label>
        <input required type="text" class="form-control" value="<%= Listing.image %>" name="image">
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input required type="number" class="form-control"  value="<%= Listing.price %>" name="price">
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input required type="text" value="<%= Listing.country %>" class="form-control" name="country">
          <div class="invalid-feedback">Country name should be valid</div>
        </div> 
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input required type="text" value="<%= Listing.location %>" class="form-control" name="location">
        <div class="invalid-feedback">Location should be valid</div>
      </div>
           <button class="btn btn-dark add-btn mb-3">Update</button>
           <br><br>
    </form>
  </div>
</div>
   