<% layout('/layouts/boilerplate') -%>
<div class="row">
    <div class="col-8 offset-3 mt-3">
        <h3>Listing Details</h3>
    </div>
<div class="card show-card col-6 offset-3">
    <img src="<%= Listing.image %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text">
        <b><%= Listing.title %> </b> <br>
        <%= Listing.description %> <br>
        &#8377; <%= Listing.price.toLocaleString('en-IN') %> <br>
        <%= Listing.location %> <br>
        <%= Listing.country %> 
    </p>
    </div>
</div>
    <br>
    <div class="btns">
            <a href="/listings/<%= Listing._id %>/edit" class="btn edit-btn btn-dark col-1 add-btn offset-3">Edit</a>
            <br><br>
            <!-- <a href="/listings/<%#= Listing._id %>/delete" class="btn btn-dark offset-4">Delete</a> -->
            <form action="/listings/<%= Listing._id %>/delete" method="get">
                <button class="btn btn-dark offset-4 delete-btn">Delete</button>
            </form>
    </div>
    
</div>